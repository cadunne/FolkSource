<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="org.citizensense.model">
<class name="Campaign" table="campaigns">
	<id name="id" column="id">
		<generator class="native" />
	</id>
	<property name="start_date" />
	<property name="end_date" />
	<property name="title" />
	<property name="description" />
	<property name="task_id" />
	<property name="owner_id" />
	<bag name="tasks" lazy="false">
		<key column="camp_id" not-null="false"/>
		<!-- <index column="id" base="1" />-->
		<one-to-many class="Task" />
	</bag>
	<!-- <list name="tasks" lazy="false" >
		<key column="camp_id" not-null="true"/>
		<index column="id" />
		<one-to-many class="Task"/>
	</list> -->
</class>
</hibernate-mapping>