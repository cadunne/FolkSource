<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
    android:background="@drawable/tab_unselected">
  <TextView 
    android:id="@+id/campaign_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="Campaign Title"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:textSize="30sp"
    android:gravity="center" />
  <ImageView 
    android:id="@+id/campaign_image"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:adjustViewBounds="true"
    android:layout_below="@id/campaign_title"
    android:src="@drawable/profile_default"
    android:padding="20dp" />
  <TextView 
    android:id="@+id/campaign_description"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:singleLine="false"
    android:background="@drawable/tab_selected"
    android:text="Campaign\nDescription"
    android:textSize="20sp"
    android:textColor="#FFFFFF"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="10dp"
    android:layout_below="@id/campaign_image"/>
  <TextView 
    android:id="@+id/campaign_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/campaign_description"
    android:layout_alignParentBottom="true"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:layout_margin="20dp"
    android:padding="10dp"
    android:singleLine="false"
    android:text="Start Date:
End Date:
Times:
Locations:"/>
  <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_toRightOf="@id/campaign_info"
    android:layout_below="@id/campaign_description"
    android:layout_alignParentRight="true"
    android:layout_marginTop="20dp" >
    
  <Button 
    android:id="@+id/map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="5dp"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:text="MAP"
    android:padding="10dp" />
  <Button 
    android:id="@+id/task"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="5dp"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:text="Complete"
    android:padding="10dp" />
  <Button 
    android:id="@+id/download_or_delete"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:layout_margin="5dp"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:text="Download"
    android:padding="10dp" />
  </LinearLayout>
</RelativeLayout>
