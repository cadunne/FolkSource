<?xml version="1.0" encoding="utf-8"?>

  <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">
  <TextView 
    android:id="@+id/campaign_title"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:text="Campaign Title"
    android:background="@drawable/tab_selected"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:gravity="center" />
  <ImageView 
    android:id="@+id/campaign_image"
    android:layout_width="250dip"
    android:layout_height="250dip"
    android:adjustViewBounds="true"
    android:layout_below="@id/campaign_title"
    android:layout_alignParentLeft="true"
    android:layout_margin="10dp"
    android:layout_alignBottom="@id/download_or_delete"
    android:src="@drawable/profile_default" />
  <Button 
    android:id="@+id/task"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Go"
    android:padding="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@id/campaign_image"
    android:layout_below="@id/campaign_title" />
  <Button 
    android:id="@+id/map"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Map it"
    android:padding="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@id/campaign_image"
    android:layout_below="@id/task" />
  <Button 
    android:id="@+id/download_or_delete"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Start"
    android:padding="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp"
    android:layout_toRightOf="@id/campaign_image"
    android:layout_below="@id/map" />


  <TextView 
    android:id="@+id/campaign_description" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_below="@id/campaign_image"
    android:singleLine="false"
    android:textColor="#FFFFFF"
    android:text="Campaign Description"
    android:textSize="16sp"
    android:padding="10dp" />
  <TextView 
    android:id="@+id/campaign_info" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_below="@id/campaign_description"
    android:singleLine="false"
    android:textColor="#FFFFFF"
    android:text="Start Date:
End Date:
Times:
Locations:"
    android:textSize="12sp"
    android:padding="10dp" />
</RelativeLayout>