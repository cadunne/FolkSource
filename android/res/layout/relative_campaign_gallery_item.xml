<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <View
    android:id="@+id/separator3"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#666666"
    android:layout_alignParentBottom="true" />
  <LinearLayout
    android:id="@+id/buttons"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:layout_above="@id/separator3" >
    <Button 
      android:id="@+id/task"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="SENSE" />
<!--     <Button  -->
<!--       android:id="@+id/map" -->
<!--       android:layout_width="fill_parent" -->
<!--       android:layout_height="wrap_content" -->
<!--       android:layout_weight="1" -->
<!--       android:text="MAP" /> -->
    <Button 
      android:id="@+id/download_or_delete"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:text="GET" />
  </LinearLayout>
  <View
    android:id="@+id/separator2"
    android:layout_width="fill_parent"
    android:layout_height="2dp"
    android:background="#666666"
    android:layout_above="@id/buttons" />
  <LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
      android:id="@+id/info_layout"
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:orientation="horizontal"
      android:layout_above="@id/separator2"
      android:layout_weight="2"
      android:weightSum="2" >
      <ImageView
        android:id="@+id/campaign_image"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_margin="5dp"
        android:src="@drawable/profile_default" />
      <LinearLayout 
        android:id="@+id/info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1" > 
        <TextView
          android:id="@+id/campaign_title"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="Campaign Title"
          android:textSize="18sp"
          android:textColor="#FFFFFF"
          android:padding="5dp"
          android:layout_margin="5dp" />
        <TextView
          android:id="@+id/campaign_location"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="Location"
          android:textSize="14sp"
          android:textColor="#FFFFFF"
          android:padding="5dp"
          android:layout_marginLeft="5dp"
          android:layout_marginRight="5dp" />
        <TextView
          android:id="@+id/campaign_status"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:gravity="center_horizontal"
          android:text="Campaign Status"
          android:textSize="14sp"
          android:textColor="#FFFFFF"
          android:padding="5dp"
          android:layout_margin="5dp" />
      </LinearLayout>
    </LinearLayout>
    <View
      android:id="@+id/separator1"
      android:layout_width="fill_parent"
      android:layout_height="2dp"
      android:padding="5dp"
      android:background="#666666" />
    <TextView 
      android:id="@+id/campaign_description" 
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:padding="5dp"
      android:layout_margin="5dp"
      android:text="Campaign Description"
      android:textColor="#FFFFFF" />
  </LinearLayout>
</RelativeLayout>
