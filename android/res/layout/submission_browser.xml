<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:stretchColumns="1" >

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ffffffff" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ff888888"
                android:gravity="center"
                android:text="Name"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ff888888"
                android:gravity="center"
                android:text="Time"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ff888888"
                android:gravity="center"
                android:text="Points Earned"
                android:textColor="#ff000000"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#ff888888" >

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffffff"
                android:gravity="center"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffffff"
                android:gravity="center"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/points"
                android:layout_width="wrap_content"
                android:layout_margin="1dip"
                android:background="#ffffffff"
                android:gravity="center"
                android:textColor="#ff000000"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:id="@+id/verifyLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Please select one option to evaluate the submission:" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/accurateBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="Accurate" />

                <Button
                    android:id="@+id/vagueBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:text="Vague" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/subImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/verifyLayout"
            android:adjustViewBounds="true" >
        </ImageView>

        <ListView
            android:id="@+id/subContentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/subImage" >
        </ListView>
    </RelativeLayout>

</LinearLayout>